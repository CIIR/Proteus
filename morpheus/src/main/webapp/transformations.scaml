- import ciir.proteus._
- import ciir.proteus.ProteusFunctions._
%form#relatedForm(method="post" action="related" onsubmit="prepRelatedSearch()")
 %ul.nav.nav-tabs#relatedTabs
  %li
   %a(href="#taggedBag" data-toggle="tab")
    Selected Objects
  %li
   %a(href="#targetBag" data-toggle="tab")
    Types
 .tab-content#relatedContent
  .tab-pane.fade.in.active#taggedBag
   %table
  .tab-pane.fade#targetBag
   %table
    - for (retType <- kReturnableTypes.sorted)
     %tr
      %td
       = pluralDisplayName(retType)
      %td
       %input(type="checkbox" name="targetType" value=retType)
    %tr
     %td 
      All of 'Em
     %td
      %input(type="checkbox" name="targetType" value="all")
   %button(type="submit") Go For It