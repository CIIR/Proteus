-@ val body: String
-@ val user: Option[String] = None
!!! 5
%html
 %head
  %title Proteus: Perspectives on Search
  %meta{:name => "viewport",
        :content => "width=device-width, initial-scale=1.0"}
  %meta{:name => "description", :content => ""}
  %meta{:name => "author", :content => ""}
  %link{:href=> "assets/css/bootstrap.min.css", :rel => "stylesheet"}
  :css
   body {
    padding-top: 60px;
    padding-bottom: 40px;
   }
   .sidebar-nav {
    padding: 9px 0;
   }
  %script(src="assets/js/jquery-1.8.2.min.js")
  %script(src="assets/js/jquery-ui-1.9.0.custom.min.js")
  %script(src="assets/js/jquery.cookie.js")
  %script(src="assets/js/bootstrap.min.js")
  %script(src="assets/js/noty/jquery.noty.js")
  %script(src="assets/js/noty/layouts/top.js")
  %script(src="assets/js/noty/layouts/topCenter.js")
  %script(src="assets/js/noty/layouts/topLeft.js")
  %script(src="assets/js/noty/layouts/topRight.js")
  %script(src="assets/js/noty/themes/default.js")
  %link(href="assets/css/jquery-ui-1.9.0.custom.min.css" rel="stylesheet")
  %link(href="assets/css/bootstrap-responsive.min.css" rel="stylesheet")
  /[if lt IF 9]
   %script{:src => "http://html5shim.googlecode.com/svn/trunk/html5.js"}
  %link{:rel => "assets/ico/shortcut icon", :href => "favicon.ico"}
  %link{:rel => "apple-touch-icon-prcomposed", :sizes => "144x144",
        :href => "assets/ico/apple-touch-icon-144-precomposed.png"}
  %link{:rel => "apple-touch-icon-prcomposed", :sizes => "114x114",
        :href => "assets/ico/apple-touch-icon-114-precomposed.png"}
  %link{:rel => "apple-touch-icon-prcomposed", :sizes => "72x72",
        :href => "assets/ico/apple-touch-icon-72-precomposed.png"}
  %link{:rel => "apple-touch-icon-prcomposed", 
        :href => "assets/ico/apple-touch-icon-57-precomposed.png"}
  %link{:href => "assets/css/proteus.css", :rel => "stylesheet"}
 %body
  .navbar.navbar-inverse.navbar-fixed-top
   .navbar-inner
    .container
     %a.btn.btn-navbar(type="button" data-toggle="collapse" data-target=".nav-collapse")
     %a.brand(href="/index") Proteus
     .nav-collapse
      %ul.nav
       %li
        %a(href="/index") Home
       %li
        %a(href="/search") Search
       %li
        %a(href="/wordhistory") Word Frequencies
       %li
        %a(href="/about") Contributors
       -# %li
        %a(href="/contact") Contact
       %li
        %a(href="/status") Status
       %li.pull-right
        = render("account-status.scaml", Map("user" -> user))
  != body
  / Include all functions specific to proteus
  %script(type="text/javascript" src="assets/js/proteus.js")
  .span12
   %hr
   %footer
    %div
     %span
      %h4.alt{:style => "text-align: left"}
       powered by:
       %a{:href => "http://www.galagosearch.org"}
        %img{:alt => "Galago", :src => "assets/img/galago.png"}
       brought to you by:
       %a{:href => "http://ciir.cs.umass.edu"}
        %img{:alt => "CIIR", :src => "assets/img/ciir_logo_sm.jpg"}
       %a{:href => "http://www.umass.edu"}
        %img{:alt => "University of Massachusetts Amherst", 
  	     :src => "assets/img/umass_logo.jpg"}
       %a{:href => "http://www.archive.org"}
        %img{:alt => "Internet Archive", :src => "assets/img/ia_logo.png"}
       %a{:href => "http://www.perseus.tufts.edu"}
        %img{:alt => "Perseus Project", :src => "assets/img/perseus_logo.gif"}
       %a{:href => "http://www.nsf.gov"}
        %img{:alt => "National Science Foundation", :src => "assets/img/nsf_logo.gif"}
    %p &copy; CIIR 2012
= render("modals.scaml")