<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.lemurproject</groupId>
    <artifactId>galago</artifactId>
    <packaging>pom</packaging>
    <version>3.3-PROTEUS</version>
    <name>galago</name>
    <url>http://lemurproject.org/galago.php</url>
    <description>
    Galago is a toolkit for experimenting with search engines and text processing.
    </description>
    <licenses>
        <license>
            <name>BSD license</name>
            <url>http://lemurproject.org/galago-license.html</url>
            <distribution>repo</distribution>
        </license>
    </licenses>
    <mailingLists>
      <mailingList>
        <name>Lemur-Announce</name>
        <archive>http://sourceforge.net/mailarchive/forum.php?forum_name=lemur-announce</archive>
      </mailingList>
    </mailingLists>
    <issueManagement>
      <system>SourceForge</system>
      <url>http://sourceforge.net/tracker/?group_id=161383</url>
    </issueManagement>
    <distributionManagement>
      <downloadUrl>http://lemur.sourceforge.net/repo</downloadUrl>
      <repository>
	<uniqueVersion>false</uniqueVersion>
	<id>lemur.sf.net</id>
	<name>Lemur Repository</name>
	<url>scp://shell.sourceforge.net/home/project-web/lemur/htdocs/repo</url>
	<layout>default</layout>
      </repository>
      <site>
	<id>lemur.sf.net</id>
	<name>Lemur Repository</name>
	<url>scp://shell.sourceforge.net/home/project-web/lemur/htdocs/repo</url>	
      </site>
    </distributionManagement>
    <organization>
      <name>The Lemur Project</name>
      <url>http://lemurproject.org</url>
    </organization>
    <scm>
        <connection>scm:hg:http://lemur.hg.sourceforge.net:8000/hgroot/lemur/galago</connection>
        <developerConnection>scm:hg:ssh://USERNAME@lemur.hg.sourceforge.net/hgroot/lemur/galago</developerConnection>
        <url>http://lemur.hg.sourceforge.net/hgweb/lemur/galago/</url>
    </scm>
    <modules>
        <module>core</module>
        <module>tupleflow</module>
        <module>tupleflow-typebuilder</module>
    </modules>
    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.antlr</groupId>
            <artifactId>stringtemplate</artifactId>
            <version>3.0</version>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.0.2</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-site-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
            <plugin>
		        <inherited>false</inherited>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <descriptors>
                        <descriptor>src/main/assembly/src.xml</descriptor>
                        <descriptor>src/main/assembly/bin.xml</descriptor>
                    </descriptors>
                    <tarLongFileMode>gnu</tarLongFileMode>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <configuration>
                    <goals>assembly:single</goals>
                </configuration>
            </plugin>
        </plugins>
    </build>
 </project>
